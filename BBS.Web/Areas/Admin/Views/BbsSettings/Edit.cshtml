@model BbsSetting
@{
    ViewData["Title"] = "Edit Setting";
}

<h1>Edit Setting</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="AllowedFileExtensions" class="form-label"></label>
        <input asp-for="AllowedFileExtensions" class="form-control" />
        <span asp-validation-for="AllowedFileExtensions" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
